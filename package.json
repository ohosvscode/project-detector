{
  "name": "@arkts/project-detector",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "description": "A native Rust-based project detector for HarmonyOS/OpenHarmony projects",
  "author": "Naily Zero <zero@naily.cc>",
  "license": "MIT",
  "homepage": "https://github.com/ohosvscode/project_detector#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ohosvscode/project_detector.git"
  },
  "bugs": {
    "url": "https://github.com/ohosvscode/project_detector/issues"
  },
  "keywords": [
    "harmonyos",
    "openharmony",
    "arkts",
    "project-detector",
    "native",
    "rust"
  ],
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "files": [
    "out"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "napi build --release --output-dir dist",
    "build:debug": "napi build --output-dir dist",
    "build:node": "tsdown",
    "universal": "napi universalize",
    "artifacts": "napi artifacts",
    "version": "napi version",
    "test": "vitest"
  },
  "optionalDependencies": {
    "@arkts/project-detector-android-arm64": "workspace:*",
    "@arkts/project-detector-darwin-arm64": "workspace:*",
    "@arkts/project-detector-darwin-universal": "workspace:*",
    "@arkts/project-detector-darwin-x64": "workspace:*",
    "@arkts/project-detector-linux-arm-gnueabihf": "workspace:*",
    "@arkts/project-detector-linux-arm64-gnu": "workspace:*",
    "@arkts/project-detector-linux-x64-gnu": "workspace:*",
    "@arkts/project-detector-win32-arm64-msvc": "workspace:*",
    "@arkts/project-detector-win32-ia32-msvc": "workspace:*",
    "@arkts/project-detector-win32-x64-msvc": "workspace:*"
  },
  "napi": {
    "binaryName": "project-detector",
    "packageName": "@arkts/project-detector",
    "targets": [
      "x86_64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "i686-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf",
      "aarch64-unknown-linux-gnu",
      "aarch64-apple-darwin",
      "universal-apple-darwin",
      "aarch64-pc-windows-msvc",
      "aarch64-linux-android"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@napi-rs/cli": "^3.3.0",
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.37.0",
    "magic-string": "^0.30.19",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vscode-uri": "^3.1.0"
  }
}
